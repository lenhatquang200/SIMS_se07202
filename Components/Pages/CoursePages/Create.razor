@page "/courses/create"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Identity
@using SIMS.Data
@inject IDbContextFactory<SIMS.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager
@inject UserManager<ApplicationUser> UserManager
@inject RoleManager<IdentityRole> RoleManager

<PageTitle>Create</PageTitle>

<h1>Create</h1>

<h2>Course</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <EditForm method="post" Model="Course" OnValidSubmit="AddCourse" FormName="create" Enhance>
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" role="alert"/>
            <div class="mb-3">
                <label for="name" class="form-label">Name:</label> 
                <InputText id="name" @bind-Value="Course.Name" class="form-control" /> 
                <ValidationMessage For="() => Course.Name" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="subjectid" class="form-label">Subject:</label> 
                <InputSelect id="subjectid" @bind-Value="Course.SubjectId" class="form-select">
                    <option value="0">-- Select subject --</option>
                    @foreach (var s in Subjects)
                    {
                        <option value="@s.Id">@s.Name</option>
                    }
                </InputSelect>
                <ValidationMessage For="() => Course.SubjectId" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="semesterid" class="form-label">Semester:</label> 
                <InputSelect id="semesterid" @bind-Value="Course.SemesterId" class="form-select">
                    <option value="0">-- Select semester --</option>
                    @foreach (var sem in Semesters)
                    {
                        <option value="@sem.Id">@sem.Name</option>
                    }
                </InputSelect>
                <ValidationMessage For="() => Course.SemesterId" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="lectureid" class="form-label">Lecturer:</label> 
                <InputSelect id="lectureid" @bind-Value="Course.LectureId" class="form-select">
                    <option value="">-- Select lecturer --</option>
                    @foreach (var lecturer in Lecturers)
                    {
                        <option value="@lecturer.Id">@lecturer.Name</option>
                    }
                </InputSelect>
                <ValidationMessage For="() => Course.LectureId" class="text-danger" /> 
            </div>        
            <button type="submit" class="btn btn-primary">Create</button>
        </EditForm>
    </div>
</div>

<div>
    <a href="/courses">Back to List</a>
</div>

@code {
    [SupplyParameterFromForm]
    private Course Course { get; set; } = new();

    private List<Subject> Subjects { get; set; } = new();
    private List<Semester> Semesters { get; set; } = new();
    private List<ApplicationUser> Lecturers { get; set; } = new();

    // To protect from overposting attacks, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task AddCourse()
    {
        using var context = DbFactory.CreateDbContext();
        context.Courses.Add(Course);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/courses");
    }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        Subjects = await context.Subjects.AsNoTracking().ToListAsync();
        Semesters = await context.Semesters.AsNoTracking().ToListAsync();

        var lecturerRole = await RoleManager.FindByNameAsync("Lecture");
        if (lecturerRole != null)
        {
            var lecturerUserIds = await context.UserRoles
                .Where(ur => ur.RoleId == lecturerRole.Id)
                .Select(ur => ur.UserId)
                .ToListAsync();
            
            Lecturers = await UserManager.Users
                .Where(u => lecturerUserIds.Contains(u.Id))
                .ToListAsync();
        }
    }
}
