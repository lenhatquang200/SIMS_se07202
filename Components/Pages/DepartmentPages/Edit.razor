@page "/departments/edit"
@using Microsoft.EntityFrameworkCore
@using SIMS.Data
@inject IDbContextFactory<SIMS.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Edit Department</PageTitle>

<div class="container-fluid p-4">
    <div class="d-flex align-items-center mb-4">
  <a href="/departments" class="btn btn-outline-secondary me-3">
<i class="bi bi-arrow-left"></i>
   </a>
<h1 class="mb-0">
            <i class="bi bi-building text-primary"></i> Edit Department
        </h1>
    </div>

    @if (Department is null)
    {
        <div class="card shadow-sm">
<div class="card-body">
       <div class="d-flex justify-content-center p-4">
 <div class="spinner-border text-primary" role="status">
    <span class="visually-hidden">Loading...</span>
  </div>
     </div>
            </div>
    </div>
    }
    else
    {
        <div class="row">
      <div class="col-md-6">
      <div class="card shadow-sm">
<div class="card-body">
       <EditForm method="post" Model="Department" OnValidSubmit="UpdateDepartment" FormName="edit" Enhance>
        <DataAnnotationsValidator />
      <ValidationSummary class="text-danger rounded p-3 mb-3 bg-light" role="alert"/>
             <input type="hidden" name="Department.Id" value="@Department.Id" />

           <div class="form-floating mb-4">
         <InputText id="name" @bind-Value="Department.Name" class="form-control" placeholder="Enter department name"/>
      <label for="name">Department Name</label>
       <ValidationMessage For="() => Department.Name" class="text-danger small" />
        </div>

   <div class="d-flex gap-2">
      <button type="submit" class="btn btn-primary">
       <i class="bi bi-check-circle"></i> Save Changes
     </button>
    <a href="/departments" class="btn btn-outline-secondary">Cancel</a>
        </div>
       </EditForm>
         </div>
    </div>
        </div>
        </div>
    }
</div>

@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    [SupplyParameterFromForm]
    private Department? Department { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
   Department ??= await context.Departments.FirstOrDefaultAsync(m => m.Id == Id);

        if (Department is null)
        {
            NavigationManager.NavigateTo("notfound");
   }
}

    private async Task UpdateDepartment()
    {
        using var context = DbFactory.CreateDbContext();
context.Attach(Department!).State = EntityState.Modified;

        try
     {
         await context.SaveChangesAsync();
    }
    catch (DbUpdateConcurrencyException)
        {
  if (!DepartmentExists(Department!.Id))
      {
   NavigationManager.NavigateTo("notfound");
            }
            else
         {
         throw;
       }
      }

        NavigationManager.NavigateTo("/departments");
    }

    private bool DepartmentExists(int id)
    {
        using var context = DbFactory.CreateDbContext();
 return context.Departments.Any(e => e.Id == id);
    }
}
