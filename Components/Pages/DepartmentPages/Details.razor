@page "/departments/details"
@using Microsoft.EntityFrameworkCore
@using SIMS.Data
@inject IDbContextFactory<SIMS.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Department Details</PageTitle>

<div class="container-fluid p-4">
  <div class="d-flex align-items-center mb-4">
      <a href="/departments" class="btn btn-outline-secondary me-3">
      <i class="bi bi-arrow-left"></i>
    </a>
        <h1 class="mb-0">
    <i class="bi bi-building text-primary"></i> Department Details
        </h1>
    </div>

    @if (department is null)
    {
        <div class="card shadow-sm">
      <div class="card-body">
          <div class="d-flex justify-content-center p-4">
     <div class="spinner-border text-primary" role="status">
        <span class="visually-hidden">Loading...</span>
      </div>
       </div>
    </div>
        </div>
    }
    else
    {
        <div class="row">
    <div class="col-md-6">
         <div class="card shadow-sm">
        <div class="card-body">
  <div class="mb-4">
<h6 class="text-muted mb-2">Department Name</h6>
      <p class="h5">@department.Name</p>
   </div>

               <div class="d-flex gap-2">
         <a href="@($"/departments/edit?id={department.Id}")" class="btn btn-primary">
       <i class="bi bi-pencil"></i> Edit
     </a>
         <a href="/departments" class="btn btn-outline-secondary">Back to List</a>
           </div>
     </div>
      </div>
       </div>
        </div>
    }
</div>

@code {
  private Department? department;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        department = await context.Departments.FirstOrDefaultAsync(m => m.Id == Id);

        if (department is null)
   {
         NavigationManager.NavigateTo("notfound");
        }
    }
}
