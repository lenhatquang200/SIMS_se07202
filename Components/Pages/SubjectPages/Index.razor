@page "/subjects"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using SIMS.Data
@implements IAsyncDisposable
@inject IDbContextFactory<SIMS.Data.ApplicationDbContext> DbFactory

<PageTitle>Subjects</PageTitle>

<div class="container-fluid p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">
      <i class="bi bi-book text-primary"></i> Subjects
        </h1>
        <a href="subjects/create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New Subject
        </a>
    </div>

    <div class="card shadow-sm">
      <div class="card-body">
     <QuickGrid Class="table table-hover" Items="context.Subjects">
        <PropertyColumn Title="Subject Name" Property="subject => subject.Name" />
        <PropertyColumn Title="Subject Code" Property="subject => subject.Code" />
    <TemplateColumn Title="Actions" Context="subject">
        <div class="btn-group" role="group">
          <a href="@($"subjects/edit?id={subject.Id}")" class="btn btn-outline-primary btn-sm">
    <i class="bi bi-pencil"></i> Edit
         </a>
       <a href="@($"subjects/details?id={subject.Id}")" class="btn btn-outline-info btn-sm">
    <i class="bi bi-info-circle"></i> Details
    </a>
   <a href="@($"subjects/delete?id={subject.Id}")" class="btn btn-outline-danger btn-sm">
     <i class="bi bi-trash"></i> Delete
   </a>
     </div>
          </TemplateColumn>
  </QuickGrid>
        </div>
    </div>
</div>

@code {
    private ApplicationDbContext context = default!;

    protected override void OnInitialized()
    {
        context = DbFactory.CreateDbContext();
    }

    public async ValueTask DisposeAsync() => await context.DisposeAsync();
}
