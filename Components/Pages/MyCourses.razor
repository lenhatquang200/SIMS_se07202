@page "/my-courses"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Authorization
@using SIMS.Data
@rendermode InteractiveServer
@attribute [Authorize(Roles = "Lecture")]
@inject IDbContextFactory<ApplicationDbContext> DbFactory
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject UserManager<ApplicationUser> UserManager

<PageTitle>My Courses</PageTitle>

<div class="container-fluid p-4">
    <div class="mb-4">
        <h1 class="mb-2"><i class="bi bi-easel text-primary"></i> My Courses</h1>
        <p class="text-muted">View all courses assigned to you</p>
    </div>

    @if (IsLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-3 text-muted">Loading your courses...</p>
        </div>
    }
    else if (!Courses.Any())
    {
        <div class="card shadow-sm">
            <div class="card-body text-center py-5">
                <i class="bi bi-inbox display-1 text-muted"></i>
                <h4 class="mt-3">No Courses Assigned</h4>
                <p class="text-muted">You have not been assigned to any courses yet.</p>
            </div>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var course in Courses)
            {
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm hover-shadow transition">
                        <div class="card-header bg-success text-white">
                            <h5 class="card-title mb-0">
                                <i class="bi bi-mortarboard"></i> @course.Name
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <p class="mb-2">
                                    <strong><i class="bi bi-journal-text text-primary"></i> Subject:</strong><br/>
                                    <span class="ms-3">@course.Subject.Name</span>
                                </p>
                                <p class="mb-2">
                                    <strong><i class="bi bi-calendar3 text-success"></i> Semester:</strong><br/>
                                    <span class="ms-3">@course.Semester.Name</span>
                                </p>
                                <p class="mb-0">
                                    <strong><i class="bi bi-people text-info"></i> Enrolled Students:</strong><br/>
                                    <span class="ms-3 badge bg-primary">@CourseEnrollmentCounts[course.Id] student(s)</span>
                                </p>
                            </div>
                        </div>
                        <div class="card-footer bg-light">
                            <small class="text-muted">
                                <i class="bi bi-person-check"></i> Teaching
                            </small>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="mt-4">
            <div class="row">
                <div class="col-md-6">
                    <div class="alert alert-success">
                        <i class="bi bi-check-circle"></i>
                        <strong>Total Courses:</strong> @Courses.Count course(s)
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="alert alert-info">
                        <i class="bi bi-people"></i>
                        <strong>Total Students:</strong> @CourseEnrollmentCounts.Values.Sum() student(s)
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .hover-shadow {
        transition: all 0.3s ease;
    }
    
    .hover-shadow:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }
    
    .transition {
        transition: all 0.3s ease;
    }

    .card-header {
        border-bottom: 3px solid rgba(255, 255, 255, 0.3);
    }

    .badge {
        font-size: 0.9rem;
        padding: 0.4rem 0.8rem;
    }
</style>

@code {
    private List<Course> Courses { get; set; } = new();
    private Dictionary<int, int> CourseEnrollmentCounts { get; set; } = new();
    private bool IsLoading { get; set; } = true;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity?.IsAuthenticated == true)
        {
            var currentUser = await UserManager.GetUserAsync(user);
            if (currentUser != null)
            {
                using var context = DbFactory.CreateDbContext();
                Courses = await context.Course
                    .Include(c => c.Subject)
                    .Include(c => c.Semester)
                    .Where(c => c.LecturerId == currentUser.Id)
                    .OrderBy(c => c.Semester.Name)
                    .ThenBy(c => c.Name)
                    .AsNoTracking()
                    .ToListAsync();

                foreach (var course in Courses)
                {
                    var count = await context.Enrollments
                        .Where(e => e.CourseId == course.Id)
                        .CountAsync();
                    CourseEnrollmentCounts[course.Id] = count;
                }
            }
        }

        IsLoading = false;
    }
}

