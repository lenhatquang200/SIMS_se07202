@page "/semesters/edit"
@using Microsoft.EntityFrameworkCore
@using SIMS.Data
@inject IDbContextFactory<SIMS.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Edit Semester</PageTitle>

<div class="container-fluid p-4">
    <div class="d-flex align-items-center mb-4">
        <a href="/semesters" class="btn btn-outline-secondary me-3">
     <i class="bi bi-arrow-left"></i>
        </a>
        <h1 class="mb-0">
            <i class="bi bi-calendar3 text-primary"></i> Edit Semester
 </h1>
    </div>

    @if (Semester is null)
    {
        <div class="card shadow-sm">
   <div class="card-body">
             <div class="d-flex justify-content-center p-4">
          <div class="spinner-border text-primary" role="status">
               <span class="visually-hidden">Loading...</span>
     </div>
     </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-6">
                <div class="card shadow-sm">
         <div class="card-body">
              <EditForm method="post" Model="Semester" OnValidSubmit="UpdateSemester" FormName="edit" Enhance>
             <DataAnnotationsValidator />
      <ValidationSummary class="text-danger rounded p-3 mb-3 bg-light" role="alert"/>
          <input type="hidden" name="Semester.Id" value="@Semester.Id" />

        <div class="form-floating mb-4">
   <InputText id="name" @bind-Value="Semester.Name" class="form-control" placeholder="Enter semester name"/>
   <label for="name">Semester Name</label>
         <ValidationMessage For="() => Semester.Name" class="text-danger small" />
 </div>

      <div class="d-flex gap-2">
 <button type="submit" class="btn btn-primary">
<i class="bi bi-check-circle"></i> Save Changes
      </button>
          <a href="/semesters" class="btn btn-outline-secondary">Cancel</a>
       </div>
         </EditForm>
        </div>
              </div>
            </div>
        </div>
    }
</div>

@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    [SupplyParameterFromForm]
    private Semester? Semester { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        Semester ??= await context.Semesters.FirstOrDefaultAsync(m => m.Id == Id);

        if (Semester is null)
        {
   NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task UpdateSemester()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(Semester!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
 catch (DbUpdateConcurrencyException)
        {
    if (!SemesterExists(Semester!.Id))
            {
           NavigationManager.NavigateTo("notfound");
      }
            else
            {
     throw;
      }
        }

        NavigationManager.NavigateTo("/semesters");
    }

    private bool SemesterExists(int id)
    {
        using var context = DbFactory.CreateDbContext();
  return context.Semesters.Any(e => e.Id == id);
    }
}
